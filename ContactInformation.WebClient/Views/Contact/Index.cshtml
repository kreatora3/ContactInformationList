@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.4.min.js"></script>
    <script src="~/Scripts/CustomScripts/Controllers.js"></script>
    <style>
        img {
            max-height: 65px;
        }
        h2{
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="page-header">
        <h2>Contact Information</h2>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Telephone</th>
                        <th>Gender</th>
                        <th>Status</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="contactList">
                    <tr></tr>
                </tbody>
            </table>

        </div>
    </div>
    <script>
        $(document).on("click", ".delete-button", function () {            
           var idString = $(this).attr("id")
           var idInt = parseInt(idString.substring(1))
           var contact = new Object();
           contact.id = idInt;           
            $.ajax({
                url: "http://localhost:24478/api/ContactInfo",
                type: "Post",
                data: contact,
                success: function (data) {
                    var trId = idString.replace("d", "t")
                   $("#" + trId).fadeOut("slow")
                },
                error: function (msg) { alert("Post action Failed :("); }
            });
        });

        $(document).on("click", ".status-button", function () {
            var idString = $(this).attr("id")           
            var status = $(this).attr("value")           
            var idInt = parseInt(idString.substring(1))

            var contact = new Object();
            contact.id = idInt;            
            $.ajax({
                url: "http://localhost:24478/api/changeStatus",
                type: "Post",
                data: contact,
                success: function (data) {
                    if (status != "Active") {
                        $("#" + idString).attr("value","Active")
                    } else {
                        $("#" + idString).attr("value", "Inactive")
                    }
                },
                error: function (msg) { alert("Post action Failed :("); }
            });
        });
    </script>
</body>
</html>
